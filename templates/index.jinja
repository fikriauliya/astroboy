{% extends "base.jinja" %}

{% block content %}
<div class="max-w-md mx-auto p-4">
    {% set chats = thread.chats %}
    <div id="chats">
        {% include "_chat.jinja" %}
    </div>
    <form class="flex items-center mt-4" hx-post="/chat" hx-target="#last-placeholder" hx-swap="outerHTML">
        <input name="message" type="text" placeholder="Type a message"
            class="flex-grow p-4 bg-white rounded-l-lg focus:outline-none">
        <button class="bg-green-500 text-white p-4 rounded-r-lg">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
        </button>
    </form>
</div>
{% endblock %}